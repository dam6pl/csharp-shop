@model IEnumerable<ShopDN.Data.Models.Shop.Product>

<!--================ Feature Product Area =================-->
<section class="feature_product_area section_gap_bottom_custom">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="main_title">
                    <h2><span>Polecane produkty</span></h2>
                    <p>Poznaj najczęściej kupowane produkty, które spełniają oczekiwania klientów.</p>
                </div>
            </div>
        </div>

        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="single-product">
                        <div class="product-img">
                            <img class="img-fluid w-100" src="@item.ImageURL" alt="" />
                        </div>
                        <div class="product-btm">
                            <a asp-controller="Shop" asp-action="Details" asp-route-id="@item.Id" class="d-block">
                                <h3>@item.Title</h3>
                                <h5>Autor: @item.Author</h5>
                            </a>
                            Ocena: @item.Rating/5
                            <div class="mt-3">
                                <span class="mr-4">@item.Price PLN</span>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</section>
<!--================ End Feature Product Area =================-->