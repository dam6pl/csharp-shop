@model ShopDN.Data.Models.CMS.News

@{
    ViewData["Title"] = Model.Title;
}

<!--================Home Banner Area =================-->
<section class="banner_area">
    <div class="banner_inner d-flex align-items-center">
        <div class="container">
            <div class="banner_content d-md-flex justify-content-between align-items-center">
                <div class="mb-3 mb-md-0">
                    <h2>Blog</h2>
                    <p> Ostatnie wpisy na naszym blogu</p>
                </div>
                <div class="page_link">
                    <a asp-controller="Home" asp-action="Index">Strona główna</a>
                    <a asp-controller="Blog" asp-action="Index">Blog</a>
                    <a asp-controller="Blog" asp-action="Details" asp-route-id="@Model.Id">@Model.Title</a>
                </div>
            </div>
        </div>
    </div>
</section>
<!--================End Home Banner Area =================-->
<!--================Blog Area =================-->
<section class="blog_area single-post-area section_gap">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 posts-list">
                <div class="single-post">
                    <div class="feature-img">
                        <img class="img-fluid" src="@Model.ImageURL" alt="">
                    </div>
                    <div class="blog_details">
                        <h2>@Model.Title</h2>
                        <ul class="blog-info-link mt-3 mb-4">
                            <li><a href="#"><i class="ti-user"></i> @Model.Author</a></li>
                            <li><a href="#"><i class="ti-calendar"></i> @Model.PublishDate.ToString("dd MMM yyy")</a></li>
                        </ul>
                        @Html.Raw(Model.Content)
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>
<!--================Blog Area =================-->
