@model IEnumerable<ShopDN.Data.Models.CMS.News>

@{
    ViewData["Title"] = "Blog";
}

<!--================Home Banner Area =================-->
<section class="banner_area">
    <div class="banner_inner d-flex align-items-center">
        <div class="container">
            <div class="banner_content d-md-flex justify-content-between align-items-center">
                <div class="mb-3 mb-md-0">
                    <h2>Blog</h2>
                    <p> Ostatnie wpisy na naszym blogu</p>
                </div>
                <div class="page_link">
                    <a asp-controller="Home" asp-action="Index">Strona główna</a>
                    <a asp-controller="Blog" asp-action="Index">Blog </a>
                </div>
            </div>
        </div>
    </div>
</section>
<!--================End Home Banner Area =================-->
<!--================Blog Area =================-->
<section class="blog_area section_gap">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 mb-5 mb-lg-0">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <article class="blog_item col-lg-4">
                            <div class="blog_item_img">
                                <img class="card-img rounded-0" src="@item.ImageURL" alt="">
                                <a href="#" class="blog_item_date">
                                    <h3>@item.PublishDate.ToString("dd")</h3>
                                    <p>@item.PublishDate.ToString("MMM").ToUpper()</p>
                                </a>
                            </div>

                            <div class="blog_details">
                                <a class="d-inline-block" asp-controller="Blog" asp-action="Details" asp-route-id="@item.Id">
                                    <h2>@item.Title</h2>
                                </a>
                                <p>@item.Content</p>
                                <ul class="blog-info-link">
                                    <li><a href="#"><i class="ti-user"></i> @item.Author</a></li>
                                </ul>
                            </div>
                        </article>
                    }
                </div>

            </div>
        </div>
    </div>
</section>
<!--================Blog Area =================-->