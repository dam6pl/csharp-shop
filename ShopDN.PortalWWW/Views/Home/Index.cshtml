@model IEnumerable<ShopDN.Data.Models.CMS.News>

@{
    ViewData["Title"] = "Strona główna";
}

<!--================Home Banner Area =================-->
<section class="home_banner_area mb-40">
    <div class="banner_inner d-flex align-items-center">
        <div class="container">
            <div class="banner_content row">
                <div class="col-lg-12">
                    <p class="sub text-uppercase">Druga książka za 50%</p>
                    <h3><span>Otwórz się</span> na <br />nowe <span>doznania</span></h3>
                    <h4>Kup jedną książkę, a drugą z kategorii Romanse dostaniesz za 50% ceny.</h4>
                    <a class="main_btn mt-40" asp-controller="Shop" asp-action="Index">Zobacz szczegóły</a>
                </div>
            </div>
        </div>
    </div>
</section>
<!--================End Home Banner Area =================-->
<!-- Start feature Area -->
<section class="feature-area section_gap_bottom_custom">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-6">
                <div class="single-feature">
                    <a href="#" class="title">
                        <i class="flaticon-money"></i>
                        <h3>Gwarancja zwrotu pieniędzy</h3>
                    </a>
                    <p>14 dni na zwrot, bez podania przyczyny.</p>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="single-feature">
                    <a href="#" class="title">
                        <i class="flaticon-truck"></i>
                        <h3>Darmowa dostawa</h3>
                    </a>
                    <p>Zamówienia powyżej 100 PLN wyślemy za darmo.</p>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="single-feature">
                    <a href="#" class="title">
                        <i class="flaticon-support"></i>
                        <h3>Wsparcie</h3>
                    </a>
                    <p>Jesteśmy dostępni całą dobę, 7 dni w tygodniu.</p>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="single-feature">
                    <a href="#" class="title">
                        <i class="flaticon-blockchain"></i>
                        <h3>Bezpieczenstwo płatności</h3>
                    </a>
                    <p>Płatności osługiwane przez Przelewy24.</p>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End feature Area -->

@await Component.InvokeAsync("FeaturedProductsComponent")

<!--================ Offer Area =================-->
<section class="offer_area">
    <div class="container">
        <div class="row justify-content-center">
            <div class="offset-lg-4 col-lg-6 text-center">
                <div class="offer_content">
                    <h3 class="text-uppercase mb-40">Druga książka - romans</h3>
                    <h2 class="text-uppercase">-50%</h2>
                    <a href="#" class="main_btn mb-20 mt-5">Sprawdź teraz</a>
                    <p style="color: #fff">Oferta ograniczona czasowo!</p>
                </div>
            </div>
        </div>
    </div>
</section>
<!--================ End Offer Area =================-->
<!--================ Start Blog Area =================-->
<section class="blog-area section-gap section_gap_top">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="main_title">
                    <h2><span>Blog</span></h2>
                    <p>Ostatnie wpisy na naszym blogu</p>
                </div>
            </div>
        </div>

        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="single-blog">
                        <div class="thumb">
                            <img class="img-fluid" src="@item.ImageURL" alt="">
                        </div>
                        <div class="short_details">
                            <div class="meta-top d-flex">
                                <ul class="blog-info-link">
                                    <li><a href="#"><i class="ti-user"></i> @item.Author</a></li>
                                    <li><a href="#"><i class="ti-calendar"></i> @item.PublishDate.ToString("dd MMM yyy")</a></li>
                                </ul>
                            </div>
                            <a class="d-block" asp-controller="Blog" asp-action="Details" asp-route-id="@item.Id">
                                <h4>@item.Title</h4>
                            </a>
                            <div class="text-wrap">
                                <p>@item.Content</p>
                            </div>
                            <a asp-controller="Blog" asp-action="Details" asp-route-id="@item.Id" class="blog_btn">
                                Czytaj dalej <span class="ml-2 ti-arrow-right"></span>
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<!--================ End Blog Area =================-->
