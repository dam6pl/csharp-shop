@model IEnumerable<ShopDN.Data.Models.Shop.Order>

@{
    ViewData["Title"] = "Zamówienia";
}


<!-- Begin Page Content -->
<div class="container-fluid">
    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Zamówienia</h1>
    <br /><br />
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Lista zamówień</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>
                                Data zamówienia
                            </th>
                            <th>
                                Dane zamawiającego
                            </th>
                            <th>
                                Suma zamówienia
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.CreatedAt)
                            </td>
                            <td>
                                @item.FirstName @item.LastName, @item.Address
                            </td>
                            <td>
                                @item.Sum PLN
                            </td>
                            <td> 
                                <a class="btn btn-info btn-circle" asp-action="Details" asp-route-id="@item.Id">
                                    <i class="fas fa-info"></i>
                                </a>
                                <a class="btn btn-danger btn-circle" asp-action="Delete" asp-route-id="@item.Id">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>