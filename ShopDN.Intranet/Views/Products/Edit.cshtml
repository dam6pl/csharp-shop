@model ShopDN.Data.Models.Shop.Product

@{
    ViewData["Title"] = "Edycja produktu";
}

<!-- Begin Page Content -->
<div class="container-fluid">
    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Edycja produktu @Model.Title</h1>
    <a asp-action="Index" class="btn btn-primary btn-icon-split">
        <span class="icon text-white-50">
            <i class="fas fa-arrow-left"></i>
        </span>
        <span class="text">Wróć do listy</span>
    </a>
    <br /><br />
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Szczegóły produktu</h6>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Author" class="control-label"></label>
                    <input asp-for="Author" class="form-control" />
                    <span asp-validation-for="Author" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Content" class="control-label"></label>
                    <input asp-for="Content" class="form-control" id="tinymce" />
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PriceEBook" class="control-label"></label>
                    <input asp-for="PriceEBook" class="form-control" />
                    <span asp-validation-for="PriceEBook" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PriceAudiobook" class="control-label"></label>
                    <input asp-for="PriceAudiobook" class="form-control"/>
                    <span asp-validation-for="PriceAudiobook" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IdCategory" class="control-label"></label>
                    <select asp-for="IdCategory" class="form-control" asp-items="ViewBag.IdCategory"></select>
                </div>
                <div class="form-group">
                    <label asp-for="ImageURL" class="control-label"></label>
                    <input asp-for="ImageURL" class="form-control" type="url" />
                    <span asp-validation-for="ImageURL" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Rating" class="control-label"></label>
                    <input asp-for="Rating" class="form-control" type="number" min="1" max="5" step="1" />
                    <span asp-validation-for="Rating" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IsFeatured" class="control-label"></label>
                    <input asp-for="IsFeatured" class="form-control" style="width: 40px" />
                    <span asp-validation-for="IsFeatured" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Zaktualizuj" class="btn btn-success btn-block" />
                </div>
            </form>
        </div>
    </div>
</div>